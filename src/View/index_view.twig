{% extends 'Layout/page.html.twig' %}

{% block title %}My-Admin{% endblock %}

{% block header %}

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-md">
            <a class="navbar-brand" href="/">My-Admin</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    {% if app.session.get('id') is defined %}
                        <li class="nav-item">
                            <a class="nav-link" href="/edit">Change Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>
{% endblock %}


{% block content %}

    <main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">Hello! To access the My-Admin, please Login using the button below.</p>
                        <a href="/login" class="btn btn-success"><b>Log in now!</b></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">If you don't have an account then please register now!</p>
                        <a href="/register" class="btn btn-success"><b>Sign Up now!</b></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

{% endblock %}
